{
  "version": 2,
  "buildCommand": "pnpm run build",
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**/*.{js,ts}",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api"
    },
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

