# TamerX Inventory - Docker Environment Configuration
# Copy this to .env and update with your actual values

# App Configuration
VITE_APP_ID=proj_tamerx_inventory
VITE_OAUTH_PORTAL_URL=https://vida.butterfly-effect.dev
VITE_APP_TITLE="TamerX Inventory"
VITE_APP_LOGO="https://placehold.co/40x40/7FBF3F/ffffff?text=TX"
VITE_ANALYTICS_ENDPOINT=https://umami.dev.ops.butterfly-effect.dev
VITE_ANALYTICS_WEBSITE_ID=analytics_proj_tamerx

# Authentication (using Vida OAuth)
OAUTH_SERVER_URL=https://vidabiz.butterfly-effect.dev

# Database - Docker MySQL Configuration
DATABASE_URL=mysql://tamerx_user:tamerx_secure_password@localhost:3306/tamerx_inventory

# Security - CHANGE THIS IN PRODUCTION!
JWT_SECRET=change-this-to-a-random-32-character-secret-key

# Optional: AI Search (requires OpenAI API key)
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Image Storage (AWS S3)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=tamerx-inventory-images

# Server Configuration
PORT=3000
NODE_ENV=development

# Docker MySQL Configuration (matches docker-compose.yml)
MYSQL_ROOT_PASSWORD=tamerx_root_password_change_me
MYSQL_DATABASE=tamerx_inventory
MYSQL_USER=tamerx_user
MYSQL_PASSWORD=tamerx_secure_password
